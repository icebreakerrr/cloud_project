pipeline {
    agent {
        kubernetes {
            cloud 'team5-eks'
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              serviceAccountName: jenkins-admin
            """
        }
    }
    environment {
        APP_NAME = "soldesk-local"
    }

    stages {
        stage("Checkout from SCM") {
               steps {
                    sh 'pwd'
                    sh 'ls -al'
                    git branch: 'ocr', credentialsId: 'ocr', url: 'https://github.com/ciscocloud03-team5/gitops-integration'
               }
        }

        stage("Update the Deployment Tags") {
            steps {
                script {
                    dir('/home/jenkins/agent/workspace/gitops-soldesk/osk') {
                        sh """
                        pwd
                        ls -al
                        cat deployment.yaml
                        sed -i 's/${APP_NAME}.*/${APP_NAME}:${IMAGE_TAG}/g' deployment.yaml
                        cat deployment.yaml
                        """
                    }
                }
            }
        }

        stage("Push the changed deployment file to Git") {
            steps {
                script {
                    dir('/home/jenkins/agent/workspace/gitops-soldesk/osk') {
                        sh """
                        git config --global user.email "eleys8596@naver.com"
                        git config --global user.name "rootssv"
                        git add deployment.yaml
                        git commit -m "Updated Deployment Manifest"
                        """
                        withCredentials([gitUsernamePassword(credentialsId: 'ocr', gitToolName: 'Default')]) {
                            sh "git push https://github.com/ciscocloud03-team5/gitops-integration ocr"
                        }
                    }
                }
            }
        }
    }
}
